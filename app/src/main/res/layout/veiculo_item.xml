<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_margin="5dp"
                                    android:maxHeight="250dp">

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Placa:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" android:textSize="20sp"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView"
                android:textColor="@color/colorPrimary"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_placa" app:layout_constraintStart_toEndOf="@+id/textView3"
                android:layout_marginStart="8dp" android:textSize="20sp" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/textView" android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

        <TextView
                android:text="Eixos:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" android:textSize="20sp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_placa"
                android:textColor="@color/colorPrimary"/>

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_eixos" app:layout_constraintStart_toEndOf="@+id/textView4"
                android:layout_marginStart="8dp" android:textSize="20sp"
                android:textStyle="bold" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_placa" android:textColor="@color/colorPrimary"/>

        <TextView
                android:text="Carga MÃ¡xima:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" android:textSize="20sp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_eixos"
                android:textColor="@color/colorPrimary"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_carga" app:layout_constraintStart_toEndOf="@+id/textView5"
                android:layout_marginStart="8dp" android:textSize="20sp"
                android:textStyle="bold" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_eixos" android:textColor="@color/colorPrimary"/>



    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>